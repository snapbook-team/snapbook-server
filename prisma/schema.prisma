generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  WRITER
  PUBLISHER
}

enum Provider {
  GENERAL
  GOOGLE
}

model User {
  id           String        @id @default(cuid())
  provider     Provider
  providerId   String?
  email        String        @unique
  username     String
  password     String?
  role         UserRole      @default(WRITER)
  profileImage ProfileImage?
  project      Project[]
  createdAt    DateTime      @default(now())
}

model ProfileImage {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  url       String
  createdAt DateTime @default(now())
}

model Project {
  id        String      @id @default(cuid())
  user      User        @relation(fields: [userId], references: [id])
  userId    String
  book      Book?
  images    CardImage[]
  createdAt DateTime    @default(now())
}

model Book {
  id          String      @id @default(cuid())
  title       String
  description String
  projectId   String      @unique
  project     Project?    @relation(fields: [projectId], references: [id])
  manuscript  Manuscript?
  createdAt   DateTime    @default(now())
}

model Manuscript {
  id        String   @id @default(cuid())
  bookId    String   @unique
  book      Book     @relation(fields: [bookId], references: [id])
  url       String
  createdAt DateTime @default(now())
}

model CardImage {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  url       String
  createdAt DateTime @default(now())
}
