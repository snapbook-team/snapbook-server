generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
}

model Book {
  id          String      @id @default(cuid())
  title       String
  description String
  manuscript  Manuscript?
  images      Image[]
  createdAt   DateTime    @default(now())
}

model Manuscript {
  id        String   @id @default(cuid())
  bookId    String   @unique
  book      Book     @relation(fields: [bookId], references: [id])
  path      String
  createdAt DateTime @default(now())
}

model Image {
  id        String   @id @default(cuid())
  bookId    String
  book      Book     @relation(fields: [bookId], references: [id])
  path      String
  createdAt DateTime @default(now())
}
